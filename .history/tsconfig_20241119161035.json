{ 
  "types": ["vite/client", "node"],
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": ".",
    "lib": ["DOM", "es6"],
    "types": ["vite-plugin-svgr/client" , "vite/client"],
    "moduleResolution": "node",
    "paths": {
      "@/*": ["./src/*"]
    },
    "target": "es6",
    "module": "es6",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist"
  },
  "include": ["src/vite-env.d.ts","src/**/*.ts"],
  "exclude": [ "node_modules", "**/*.spec.ts"]
}